{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}
